{% extends 'base.html.twig' %}

{% form_theme formRegistration 'bootstrap_4_layout.html.twig' %}

{% block title %}
  S'enregistrer
{% endblock %}

{% block body %}
  <h1>Page d'inscription</h1>
  <hr>
  {{ form_start(formRegistration) }}

  {{ form_row(formRegistration.username, {'label': "Nom d'utilisateur", 'attr': {'placeholder': "Indiquez votre nom ou speudo"}}
  ) }}
  {{ form_row(formRegistration.email, {'label': "Adresse email", 'attr': {'placeholder': "Indiquer votre adresse email"}}
  ) }}
  {{ form_row(formRegistration.password, {'label': "Votre mot de passe", 'attr': {'placeholder': "Mot de passe"}}
  ) }}
  {{ form_row(formRegistration.confirm_password, {'label': "Confirmer votre mot de passer", 'attr': {'placeholder': "Il doit être identique à celui indiquer ci-dessus"}}
  ) }}

  <button type="submit" class="btn btn-primary">Enregistrer !</button>

  {{ form_end(formRegistration)}}

{% endblock %}
